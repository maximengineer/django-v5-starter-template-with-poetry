# Django Settings
# Environment: dev, prod, test (uses core.backend.settings.{env})
DJANGO_ENV=dev
DEBUG=True

# SECRET_KEY: Generate unique key for each developer/environment
# Development: Optional (falls back to default with warning)
# Production: REQUIRED (must be 50+ characters)
# Generate with: python -m core.manage generate_secret_key
# SECRET_KEY=django-insecure-your-unique-secret-key-here

ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
POSTGRES_DB=backend_db
POSTGRES_USER=backend_user
POSTGRES_PASSWORD=backend_password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Logging
DJANGO_LOG_LEVEL=DEBUG

# Security (Production only)
# CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
# SECURE_SSL_REDIRECT=True
# SECURE_HSTS_SECONDS=31536000

# CORS Configuration (for API/frontend integration)
# CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Email Configuration (optional)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password
# DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# Gunicorn Configuration (Docker production)
# Auto-calculated based on CPU cores if not set: (2 * cores) + 1
# GUNICORN_WORKERS=4
# GUNICORN_TIMEOUT=60
# GUNICORN_LOG_LEVEL=info

# Docker Entrypoint Control (for zero-downtime deployments)
# SKIP_MIGRATIONS=false      # Set to 'true' to skip migrations on container start
# SKIP_COLLECTSTATIC=false   # Set to 'true' to skip collectstatic on container start

# Redis Cache (Production - optional but recommended)
# For AWS ElastiCache: REDIS_URL=redis://your-elasticache-endpoint:6379/0
# For local Redis: REDIS_URL=redis://localhost:6379/0
# REDIS_URL=redis://localhost:6379/0

# AWS S3 Storage (Production media files - OPTIONAL)
# Requires: poetry add django-storages[s3] boto3
# USE_S3=True
# AWS_ACCESS_KEY_ID=your-access-key-id
# AWS_SECRET_ACCESS_KEY=your-secret-access-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1
